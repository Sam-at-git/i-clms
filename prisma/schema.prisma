// ================================
// 通知系统
// ================================

enum NotificationType {
  CONTRACT_EXPIRY      // 合同到期提醒
  PAYMENT_OVERDUE      // 付款逾期提醒
  CONTRACT_APPROVAL    // 合同审批待办
  MILESTONE_DUE        // 里程碑到期
  RISK_ALERT           // 风险告警
  SYSTEM_ANNOUNCEMENT  // 系统公告
  MENTION              // @提醒
  TASK_ASSIGNED        // 任务分配
  DOCUMENT_SHARED      // 文档共享
}

enum NotificationPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum NotificationStatus {
  SENT      // 已发送
  READ      // 已读
  ARCHIVED  // 已归档
}

model Notification {
  id          String               @id @default(cuid())
  type        NotificationType
  priority    NotificationPriority @default(NORMAL)
  status      NotificationStatus   @default(SENT)

  // 通知内容
  title       String   // 通知标题
  message     String   @db.Text // 通知内容
  link        String?  // 相关链接（如合同详情页）

  // 接收者
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 发送方式
  inApp       Boolean @default(true)  // 应用内通知
  email       Boolean @default(false) // 邮件通知
  sms         Boolean @default(false) // 短信通知

  // 发送状态
  emailSent   Boolean @default(false)
  emailSentAt DateTime?
  smsSent     Boolean @default(false)
  smsSentAt   DateTime?

  // 读取时间
  readAt      DateTime?

  // 过期时间（可选）
  expiresAt   DateTime?

  // 元数据（扩展字段）
  metadata    Json? // {"contractId":"xxx","contractNo":"C001"}

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([priority])
  @@index([createdAt])
  @@map("notifications")
}

// 用户通知偏好设置
model NotificationPreference {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 全局开关
  enableInApp     Boolean  @default(true)
  enableEmail     Boolean  @default(false)
  enableSms       Boolean  @default(false)

  // 各类型通知设置
  contractExpiry        Boolean @default(true)
  paymentOverdue        Boolean @default(true)
  contractApproval      Boolean @default(true)
  milestoneDue          Boolean @default(true)
  riskAlert             Boolean @default(true)
  systemAnnouncement    Boolean @default(true)
  mention               Boolean @default(true)
  taskAssigned          Boolean @default(true)
  documentShared        Boolean @default(true)

  // 免打扰时段
  quietHoursStart       String?  // HH:mm格式
  quietHoursEnd         String?  // HH:mm格式

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("notification_preferences")
}
