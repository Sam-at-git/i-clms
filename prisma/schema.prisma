  @@index([status])
  @@index([sequence])
  @@map("contract_signing")
}

enum SignerType {
  FIRST_PARTY       // 甲方（委托方）
  SECOND_PARTY      // 乙方（受托方）
  WITNESS           // 见证人
  GUARANTOR         // 担保方
