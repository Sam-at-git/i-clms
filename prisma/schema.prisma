// ================================
// 合同模板
// ================================

model ContractTemplate {
  id String @id @default(cuid())

  // 基本信息
  name        String   @unique // 模板名称
  displayName String?         // 显示名称
  description String?  @db.Text // 模板描述
  category    String?  // 模板分类（人力外包/项目外包/产品购销）
  type        ContractType // 合同类型

  // 模板内容
  content     String   @db.Text // 模板内容（markdown或docx内容）
  fileUrl     String?  // 模板文件路径
  fileType    String?  // 文件类型

  // 模板参数（JSON格式的可替换字段）
  parameters  Json?    // 参数定义: [{"name":"contractNo","label":"合同编号","type":"text","required":true,"defaultValue":""}]

  // 默认值（用于快速填充）
  defaultValues Json? // 默认值: {"ourEntity":"XX公司","paymentTerms":"30天"}

  // 状态与管理
  isActive    Boolean @default(true) // 是否启用
  isSystem    Boolean @default(false) // 是否系统模板
  version     String  @default("1.0") // 模板版本

  // 使用统计
  usageCount  Int     @default(0) // 使用次数
  lastUsedAt  DateTime? // 最后使用时间

  // 创建者信息
  createdById String
  createdBy   User     @relation("TemplateCreator", fields: [createdById], references: [id])

  // 部门（部门级模板）
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 从模板创建的合同
  contracts Contract[] @relation("ContractTemplate")

  @@index([type])
  @@index([category])
  @@index([isActive])
  @@index([createdById])
  @@index([departmentId])
  @@map("contract_template")
}

// ================================
// 合同签署追踪
// ================================

model ContractSigning {
  id         String   @id @default(cuid())
  contractId String
  contract   Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)

  // 签署方信息
  signerName     String   // 签署人姓名
  signerTitle    String?  // 签署人职务
  signerEmail    String?  // 签署人邮箱
  signerCompany  String   // 签署公司
  signerType     SignerType // 签署方类型（甲方/乙方/见证人等）

  // 签署状态
  status         SigningStatus @default(PENDING) // 待签署/已签署/已拒绝
  signedAt       DateTime? // 签署时间
  signatureUrl   String?  // 签名文件URL

