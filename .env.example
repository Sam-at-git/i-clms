# Database
DATABASE_URL=postgresql://iclms:iclms_dev_123@localhost:5432/iclms

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=contracts

# API
API_PORT=3000

# JWT Authentication (required)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Web
VITE_API_URL=http://localhost:3000/graphql

# ========== LLM Configuration ==========
#
# 选择LLM提供商: 'ollama' (本地免费) 或 'openai' (云端收费)
ACTIVE_LLM_PROVIDER=ollama

# --- Ollama 配置 (当 ACTIVE_LLM_PROVIDER=ollama 时使用) ---
# Ollama服务地址，无需添加 /v1 后缀（系统会自动添加）
# 留空则使用默认值 http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Ollama模型名称（可选）
# 常用模型: gemma3:27b, llama3.2, qwen2.5, deepseek-r1
# 留空则使用默认值 gemma3:27b
OLLAMA_MODEL=gemma3:27b

# --- OpenAI 配置 (当 ACTIVE_LLM_PROVIDER=openai 时使用) ---
# OpenAI API密钥（必填）
OPENAI_API_KEY=

# OpenAI API地址（可选）
# 留空则使用默认值 https://api.openai.com
OPENAI_BASE_URL=https://api.openai.com

# OpenAI模型名称（可选）
# 常用模型: gpt-4o, gpt-4o-mini, gpt-4-turbo
# 留空则使用默认值 gpt-4o
OPENAI_MODEL=gpt-4o

# --- 通用参数（两种提供商都使用） ---
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=8000
LLM_TIMEOUT=120000

# ========== Embedding Configuration ==========
# 向量嵌入模型配置（用于语义搜索和RAG）
# IMPORTANT: Only nomic-embed-text (768 dimensions) is currently supported
# Do not change EMBEDDING_MODEL without updating database schema
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768

# ========== OCR Configuration (Docling) ==========
# PDF文档OCR引擎
# rapidocr: 基于PaddleOCR，中文识别效果最好（推荐）
# easyocr: 支持多语言，识别速度中等
# tesseract: 开源OCR引擎，英文识别较好
OCR_ENGINE=rapidocr
